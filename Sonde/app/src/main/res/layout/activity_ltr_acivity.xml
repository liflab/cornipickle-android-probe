<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    tools:context="ca.liflab.sonde.ca.liflab.examples.RtlAcivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/quickContactBadge"
        android:layout_toStartOf="@+id/quickContactBadge"
        android:layoutDirection="ltr"
        android:text="Liflab" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/quickContactBadge2"
        android:layout_centerHorizontal="true"
        android:layoutDirection="ltr"
        android:text="545-5011(418)" />

    <QuickContactBadge
        android:id="@+id/quickContactBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:src="@android:drawable/ic_menu_manage"
        android:tag="@string/appbar_scrolling_view_behavior"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <QuickContactBadge
        android:id="@+id/quickContactBadge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quickContactBadge"
        android:layout_alignStart="@+id/quickContactBadge"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="48dp"
        android:src="@android:drawable/stat_sys_phone_call"
        app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />
</RelativeLayout>
